<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/viola"
        android:contentDescription="@string/bk" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_zoe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/audiowide"
                android:gravity="center"
                android:text="@string/zoe"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/team_zoe_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="80sp" />


            <Button
                android:id="@+id/crunchy_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/crunchy_z"
                android:backgroundTint="#7385e6e0"
                android:fontFamily="@font/cherry_cream_soda"
                android:onClick="addThreeForTeamZoe"
                android:text="@string/_3_crunchy"
                android:textAllCaps="true"
                android:textColor="#FF1234F4"
                />


            <Button
                android:id="@+id/gummy_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#B34EEA3D"
                android:fontFamily="@font/cherry_cream_soda"
                android:onClick="addTwoForTeamZoe"
                android:text="@string/_2_gummy"
                android:textAllCaps="true"
                android:textColor="#127b10" />

            <Button
                android:id="@+id/jelly_z"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#73ecd66a"
                android:fontFamily="@font/cherry_cream_soda"
                android:onClick="addOneForTeamZoe"
                android:text="@string/_1_jelly"
                android:textAllCaps="true"
                android:textColor="#bd0aea" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team_lola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/cherry_cream_soda"
                android:gravity="center"
                android:text="@string/lola"
                android:textAllCaps="true"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/team_lola_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/_0"
                android:textColor="@android:color/holo_orange_light"
                android:textSize="80sp" />


            <Button
                android:id="@+id/crunchy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#7385e6e0"
                android:fontFamily="@font/cherry_cream_soda"
                android:onClick="addThreeForTeamLola"
                android:text="@string/_3_crunchy"
                android:textAllCaps="true"
                android:textColor="#FF1234F4"
                />

            <Button
                android:id="@+id/gummy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#b34eea3d"
                android:fontFamily="@font/cherry_cream_soda"
                android:onClick="addTwoForTeamLola"
                android:text="@string/_2_gummy"
                android:textAllCaps="true"
                android:textColor="#127b10" />

            <Button
                android:id="@+id/jelly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="#73ecd66a"
                android:fontFamily="@font/cherry_cream_soda"
                android:onClick="addOneForTeamLola"
                android:text="@string/_1_jelly"
                android:textAllCaps="true"
                android:textColor="#bd0aea" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:background="#97ec20d8"
        android:fontFamily="@font/cherry_cream_soda"
        android:onClick="resetScore"
        android:text="@string/clean"
        android:textAllCaps="true"
        android:textColor="@android:color/holo_orange_light" />

</RelativeLayout>
